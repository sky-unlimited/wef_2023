<main class="container-fluid">
  <h1 class="text-center"><%= t('console.title') %></h1>
  <div class="d-flex flex-wrap">
    <section class="d-flex flex-column bg-light m-20 p-20 border border-shadow">
      <h2><%= t('console.export_title') %></h2>
      <div>
        <div class="mb-30">
          <%= link_to t('console.export_button'), subscribers_index_path(format: :csv), class: "btn btn-primary" %>
          <%= t('activerecord.models.subscriber') %>
        </div>
        <div class="mb-30">
          <%= link_to t('console.export_button'), fuel_stations_path(format: :csv), class: "btn btn-primary" %>
          <%= t('activerecord.models.fuel_station') %>
        </div>
        <div class="mb-30">
          <%= link_to t('console.export_button'), contacts_path(format: :csv), class: "btn btn-primary" %>
          <%= t('activerecord.models.contact') %>
        </div>
      </div>
    </section>
    <section class="d-flex flex-column bg-light m-20 p-20 border border-shadow">
      <h2 class="text-center"><%= t('activerecord.models.contact') %></h2>
      <%= area_chart Contact.group_by_month(:created_at).count, colors: ["#D84727", "#666"] %>
    </section>
    <section class="d-flex flex-column bg-light m-20 p-20 border border-shadow">
      <h2 class="text-center"><%= t('activerecord.models.contact') %></h2>
      <%= pie_chart Contact.group(:category).count, colors: ["#D9ED92", "#B5E48C", "#99D98C", "#76C893", "#52B69A", "#34A0A4", "#168AAD"] %>
    </section>
    <section class="d-flex flex-column bg-light m-20 p-20 border border-shadow">
      <h2 class="text-center"><%= t('activerecord.models.subscriber') %></h2>
      <%= area_chart Subscriber.group_by_month(:created_at).count, colors: ["#bdb246", "#666"] %>
    </section>
    <section class="d-flex flex-column bg-light m-20 p-20 border border-shadow">
      <h2 class="text-center"><%= t('activerecord.models.fuel_station') %></h2>
      <%= area_chart FuelStation.group_by_month(:created_at).count, colors: ["#D84727", "#666"] %>
    </section>
  </div>
</main>
