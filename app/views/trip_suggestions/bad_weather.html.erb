<div class="container-sm bg-color1 d-flex flex-column">
  <div class="w-100">
    <h1 class="text-center mb-5 mt-5"><%= @trip_request.airport.icao %></h1>
    <h2 class="text-center mt-0"><%= @trip_request.airport.name %></h2>
  </div>
  <div class="d-flex flex-row justify-content-around align-items-center">
    <div class="d-flex flex-column align-items-center" >
      <p><b>outbound</b> <%= l @trip_request.start_date, format: :date_short %></p>
      <img src="https://openweathermap.org/img/wn/<%= @outbound_weather_data["icon"] %>@2x.png" alt="weather icon">
      <p><%= @outbound_weather_data["description"] %></p>
    </div>
    <div class="d-flex flex-column align-items-center" >
      <p><b>inbound</b> <%= l @trip_request.end_date, format: :date_short %></p>
      <img src="https://openweathermap.org/img/wn/<%= @inbound_weather_data["icon"] %>@2x.png" alt="weather icon">
      <p><%= @inbound_weather_data["description"] %></p>
    </div>
  </div>
  <%= link_to "New Trip Request", new_trip_request_path, class: "btn btn-secondary mb-10" %>
</div>
