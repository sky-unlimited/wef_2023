<div class="container">
  <h1>Destinations from <%= @trip_request.airport.icao %></h1>
  <div class="map-container" \
        data-controller="osm" \
        data-osm-target="map" \
        data-osm-airports-value="<%= @airports_array.to_json %>" \
        data-osm-airport-value="<%= @trip_request.airport.to_json %>" \
        data-osm-destination-zone-value="<%= @destination_zone %>" \
        data-osm-flyzone-outbound-value="<%= @flyzone_outbound %>" \
        data-osm-flyzone-inbound-value="<%= @flyzone_inbound %>" \>
  </div>
  <div class="mt-20">
    <%= link_to "New Trip Request", new_trip_request_path, class: "btn btn-secondary" %>
  </div>
</div>
