<h1 class="text-center"><%= t('activerecord.models.contact') %></h1>

<%= simple_form_for @contact, data: { turbo: false }, html: { class: "row" } do |f| %>
  <% if @contact.errors.any? %>
    <div class="alert-danger">
      <p><%=  t("forms.messages.errors", count: @contact.errors.count) %> </p>
      <ul>
        <% @contact.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-12 col-md-6">
    <%= f.input :username, input_html: { placeholder: "e.g. Birdy001" } %>
  </div>
  <div class="col-12 col-md-6">
    <%= f.input :email, input_html: { placeholder: "e.g. john.smith@example.com", readonly: @is_session ? "readonly" : nil } %>
  </div>
  <div class="col-12 col-md-6">
    <%= f.input :last_name, input_html: { placeholder: "e.g. Smith" } %>
  </div>
  <div class="col-12 col-md-6">
    <%= f.input :first_name, input_html: { placeholder: "e.g. John" } %>
  </div>
  <div class="col-12 col-md-6">
    <%= f.input :company, input_html: { placeholder: "e.g. my company" } %>
  </div>
  <div class="col-12 col-md-6">
    <%= f.input :phone, input_html: { placeholder: "e.g. +352 123 123 123" } %>
  </div>
  <div class="col-12 col-md-6">
    <%= f.input :honey_bot, as: :hidden %>
  </div>
  <div class="col-12">
    <%= f.input :category, collection: Contact::CATEGORIES %>
  </div>
  <div class="col-12">
    <%= f.input :description, as: :text, input_html: { size: "50x5", placeholder: "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua." } %>
  </div>
  <div class="col-12">
    <%= f.input :accept_privacy_policy, label: t('contact.form.accept_privacy_policy') %>
  </div>
  <div class="col-12">
    <%= f.submit t('forms.contact.submit'), class: "btn btn-primary w-100" %>
  </div>
<% end %>
