<div class="container-sm py-5">
  <div class="row card bg-color3 p-3">

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "col-6 col-md-8 mx-auto" }) do |f| %>
      <h1 class="text-center"><%= t('.sign_up') %></h1>

      <div class="form-inputs">
        <%= render "devise/shared/error_messages", resource: resource %>

        <%= f.label           :picture,
                              class: "form-label" %>
        <%= f.file_field      :picture,
                              class: "form-control mb-10" %>

        <%= f.label           :username,
                              class: "form-label" %>
        <%= f.text_field      :username,
                              autofocus: true,
                              autocomplete: "username",
                              class: "form-control mb-10",
                              placeholder: "e.g. josmith123" %>

        <%= f.label           :email,
                              class: "form-label" %>
        <%= f.email_field     :email,
                              autofocus: true,
                              autocomplete: "email",
                              class: "form-control mb-10",
                              placeholder: "e.g. john.smith@email.com" %>

        <%= f.label           :password,
                              class: "form-label" %>
        <%= f.password_field  :password,
                              autocomplete: "new-password",
                              class: "form-control mb-10",
                              placeholder: t('devise.shared.minimum_password_length',
                                           count: @minimum_password_length) %>

        <%= f.label           :password_confirmation %>
        <%= f.password_field  :password_confirmation,
                              autocomplete: "new-password",
                              class: "form-control mb-10",
                              placeholder: t('devise.shared.minimum_password_length',
                                           count: @minimum_password_length) %>
      </div>

      <div class="form-actions">
        <%= f.submit t('.sign_up'), class: "btn btn-primary" %>
      </div>

    <% end %>

    <div class="bg-dark mt-3 border border-radius">
      <p class="text-center color2"><%= t('forms.devise_custom.accept_terms') %>
        <%= link_to t('legal.privacy_policy'), legal_privacy_path, class: "link-primary", target: "_blank" %>
        <%= t('forms.devise_custom.and') %>
        <%= link_to t('legal.terms_and_conditions'),
            legal_terms_and_conditions_path,
            class: "link-primary",
            target: "_blank" %>
      </p>
    </div>

    <%= render "devise/shared/links" %>

  </div>
</div>
