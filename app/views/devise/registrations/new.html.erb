<div class="container-sm">
  <div class="form-wrapper card-product border-radius bg-color3">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "test") do |f| %>
      <h1 class="text-center"><%= t('.sign_up') %></h1>

      <div class="form-inputs">
        <%= render "devise/shared/error_messages", resource: resource %>

        <%= f.label           :picture,
                              class: "form-label" %>
        <%= f.file_field      :picture, 
                              class: "form-control" %>

        <%= f.label           :username,
                              class: "form-label" %>
        <%= f.text_field      :username,
                              autofocus: true,
                              autocomplete: "username",
                              class: "form-control",
                              placeholder: "e.g. josmith123" %>

        <%= f.label           :email,
                              class: "form-label" %>
        <%= f.email_field     :email,
                              autofocus: true,
                              autocomplete: "email",
                              class: "form-control",
                              placeholder: "e.g. john.smith@email.com" %>

        <%= f.label           :last_name,
                              class: "form-label" %>
        <%= f.text_field      :last_name,
                              class: "form-control",
                              placeholder: "e.g. Smith" %>

        <%= f.label           :first_name,
                              class: "form-label" %>
        <%= f.text_field      :first_name,
                              class: "form-control",
                              placeholder: "e.g. John" %>
      
        <%= f.label           :password,
                              class: "form-label" %>
        <%= f.password_field  :password,
                              autocomplete: "new-password",
                              class: "form-control",
                              placeholder: t('devise.shared.minimum_password_length',
                                           count: @minimum_password_length) %>

        <%= f.label           :password_confirmation %>
        <%= f.password_field  :password_confirmation,
                              autocomplete: "new-password",
                              class: "form-control",
                              placeholder: t('devise.shared.minimum_password_length',
                                           count: @minimum_password_length) %>
      </div>

      <div class="form-actions">
        <%= f.submit t('.sign_up'), class: "btn btn-primary" %>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
