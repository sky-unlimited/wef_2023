<div class="container-sm py-5">
  <div class="row card bg-color3 p-3">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "col-6 col-md-8 mx-auto" }) do |f| %>
      <h1 class="text-center color-dark"><%= t('.sign_in') %></h1>
      <div class="form-inputs">
        <%= f.label           :email,
                              class: "form-label" %>
        <%= f.email_field     :email,
                              autofocus: true,
                              autocomplete: "email",
                              class: "form-control mb-10" %>
        <%= f.label           :password,
                              class: "form-label" %><br />
        <%= f.password_field  :password,
                              autocomplete: "current-password",
                              class: "form-control mb-10" %>
        <% if devise_mapping.rememberable? %>
          <%= f.check_box     :remember_me %>
          <%= f.label         :remember_me,
                              class: "form-label" %>
        <% end %>
        <%= hidden_field_tag  :redirect_to, params[:redirect_to] %>
      </div>
      <div class="form-actions">
        <%= f.submit t('.sign_in'), class: "btn btn-primary" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
